<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.wcfvol.oj.mis.mapper.dao.AuthenticateDAO">
    <insert id="addAuthenticate" parameterType="com.wcfvol.oj.mis.pojo.data.Authenticate">
        insert into auth(
        username,salt,password
        )
        values (
        #{username},#{salt},#{password}
        )
    </insert>
    <select id="getAuthByUsername" parameterType="java.lang.String"
            resultType="com.wcfvol.oj.mis.pojo.data.Authenticate">
        select username, salt, password from auth where username = #{username}
    </select>
    <select id="getSaltByUsername" parameterType="java.lang.String"
            resultType="java.lang.String">
        SELECT salt FROM auth WHERE username = #{username}
    </select>
</mapper>
